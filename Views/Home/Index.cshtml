@{
    ViewData["Title"] = "Home Page";
}

@model List<Bowler>


<div class="row m-1 p-1">
    <div class="col-4"><br /><br /><br /><vc:team></vc:team></div>
    <div class="col-8">
        <div class="container">
            <main role="main" class="pb-3">
                <br />
                <br />

                <h2>@ViewBag.TeamName</h2>
                <table class="table table-sm table-striped table-bordered">

                    <thead>
                        <tr>
                            <th>First Name</th>
                            <th>Middle Initial</th>
                            <th>Last Name</th>
                            <th>Address</th>
                            <th>City</th>
                            <th>State</th>
                            <th>Zip</th>
                            <th>Phone Number</th>
                            <th>Team</th>
                            <th>Edit</th>
                            <th>Delete</th>
                        </tr>
                    </thead>

                    <tbody>

                        @foreach (var b in Model)
                        {

                            <tr>
                                <td>@b.BowlerFirstName</td>
                                <td>@b.BowlerMiddleInit</td>
                                <td>@b.BowlerLastName</td>
                                <td>@b.BowlerAddress</td>
                                <td>@b.BowlerCity</td>
                                <td>@b.BowlerState</td>
                                <td>@b.BowlerZip</td>
                                <td>@b.BowlerPhoneNumber</td>
                                <td>@b.Team.TeamName</td>

                                <td>
                                    <a class="btn btn-warning btn-sm" asp-controller="Home" asp-action="Edit" asp-route-id="@b.BowlerID">Edit</a>
                                </td>
                                <td>
                                    <a class="btn btn-danger btn-sm" asp-controller="Home" asp-action="Delete" asp-route-id="@b.BowlerID">Delete</a>
                                </td>

                            </tr>
                        }

                    </tbody>

                </table>




            </main>
        </div>
    </div>
</div>

