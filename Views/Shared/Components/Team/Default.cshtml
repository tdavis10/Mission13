
@{
}
@model IEnumerable<string>

<div class="d-grid gap-2">
    <a asp-controller="Home" asp-action="Index" asp-route-teamType="" class="btn btn-outline-secondary">Home</a>

    @foreach (string t in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-teamType="@t" class="btn @(ViewBag.SelectedType == t ? "btn-primary col-12 m-2" : "btn-outline-secondary col-12 m-2")">@t</a>
    }
</div>
